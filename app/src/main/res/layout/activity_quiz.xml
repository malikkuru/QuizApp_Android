<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_quiz"
    android:background="#AA3939">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUIZ APP"
        android:background="#AA3939"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="50sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="0.2"
        android:background="@drawable/question_card_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUESTION"
            android:textSize="38dp"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/question"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="answer a"
            android:textSize="25sp"
            android:background="@drawable/answer_bg"
            android:layout_margin="5dp"
            android:onClick="buttonClicked"
            android:id="@+id/answer_button_a"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="answer b"
            android:textSize="25sp"
            android:background="@drawable/answer_bg"
            android:layout_margin="5dp"
            android:onClick="buttonClicked"
            android:id="@+id/answer_button_b"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="answer c"
            android:textSize="25sp"
            android:background="@drawable/button_learn_bg"
            android:layout_margin="5dp"
            android:onClick="buttonClicked"
            android:id="@+id/answer_button_c"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="answer d"
            android:textSize="25sp"
            android:background="@drawable/answer_bg"
            android:layout_margin="5dp"
            android:onClick="buttonClicked"
            android:id="@+id/answer_button_d"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:text="POINT : 0"
            android:id="@+id/point"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/answer_true_bg"
            android:layout_gravity="bottom|left"
            android:text="NEXT"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="5dp"
            android:visibility="visible"
            android:onClick="nextButtonClicked"
            android:id="@+id/next_quiz_button"/>
    </LinearLayout>

</LinearLayout>